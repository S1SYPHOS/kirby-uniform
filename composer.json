{
    "name": "mzur/kirby-uniform",
    "description": "A versatile Kirby 2 plugin to handle web form actions.",
    "type": "library",
    "license": "GPL-2.0",
    "keywords": ["kirby", "form"],
    "authors": [
        {
            "name": "Martin Zurowietz",
            "email": "martin@the-inspired-ones.de"
        }
    ],
    "support": {
        "issues": "https://github.com/mzur/kirby-uniform/issues",
        "source": "https://github.com/mzur/kirby-uniform",
        "docs": "http://kirby-uniform.readthedocs.io"
    },
    "require": {
        "mzur/kirby-form": "@beta"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "mzur/kirby-defuse-session": "@beta",
        "getkirby/cms": "dev-develop"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Uniform\\": "src/"
        },
        "files": [
            "config.php",
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Uniform\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/k-next/kirby.git"
        }
    ]
}
